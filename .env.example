# Copy to `.env` and fill in values. Do NOT commit real secrets.

# Required (server-side only)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=

# Admin login credentials (server-side validation)
ADMIN_USER=
ADMIN_PASSWORD=

# Session signing secret for cookie-based admin login
SESSION_SECRET=

# Optional: Restrict cross-origin requests (comma-separated origins)
# Example: https://admin.example.com,https://ops.example.com
ALLOWED_ORIGINS=

# USSD root shown as *<USSD_ROOT>*<ussd_code>#
USSD_ROOT=123

# Callback authentication: shared HMAC secret for /api/mpesa/callback
CALLBACK_SECRET=

# Optional: Operations webhook for alerts (Slack, etc.)
OPS_WEBHOOK_URL=

# Server
PORT=5001
NODE_ENV=development
